{
  "name": "b2b-portal-backend",
  "version": "0.0.1",
  "description": "The backend for the dtails B2B portal",
  "scripts": {
    "dev": "nodemon --watch .env --watch knexfile.js --watch .babelrc --watch package.json --watch src src/server.js --exec babel-node",
    "build": "babel src -d dist",
    "validate-webhooks-job": "npm run build && NODE_ENV=production node dist/scheduled-tasks/validate-webhooks-job.js",
    "validate-shop-configurations-job": "npm run build && NODE_ENV=production node dist/scheduled-tasks/validate-shop-configurations-job.js",
    "update-configurations-in-shops-job": "npm run build && NODE_ENV=production node dist/scheduled-tasks/update-configurations-in-shops-job.js",
    "configure-shops-job": "npm run build && NODE_ENV=production node dist/scheduled-tasks/configure-shops-job.js",
    "migrate:latest": "babel-node ./node_modules/.bin/knex migrate:latest",
    "migrate:rollback": "babel-node ./node_modules/.bin/knex migrate:rollback",
    "migrate:make": "babel-node ./node_modules/.bin/knex migrate:make",
    "seed:run": "babel-node ./node_modules/.bin/knex seed:run",
    "seed:make": "babel-node ./node_modules/.bin/knex seed:make",
    "start-web": "npm run build && NODE_ENV=production node dist/server.js",
    "start-task": "npm run build && NODE_ENV=production node dist/task.js",
    "db:create": "createdb app_template",
    "db:drop": "dropdb app_template",
    "db:reset": "npm-run-all db:drop db:create migrate:latest seed:run",
    "test": "ava --watch  --verbose",
    "testonce": "ava"
  },
  "ava": {
    "source": "src/**/*.js",
    "files": [
      "test/**/*.js"
    ],
    "tap": true,
    "require": [
      "babel-register"
    ]
  },
  "author": "dtails Sysadmin",
  "license": "ISC",
  "dependencies": {
    "@dtails/logger": "^0.0.6",
    "@dtails/toolbox": "^0.0.12",
    "@sentry/node": "^7.32.1",
    "ajv": "^8.12.0",
    "axios": "^1.2.3",
    "babel-cli": "6.26.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-plugin-syntax-class-properties": "6.13.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.0",
    "crypto": "^1.0.1",
    "fs-extra": "^11.1.0",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.25.3",
    "nodemailer": "^6.4.6",
    "nodemailer-postmark-transport": "^3.0.0",
    "querystring": "^0.2.1",
    "shopify-api-node": "^3.12.2",
    "util": "^0.12.5",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "ava": "4.2.0",
    "nodemon": "1.11.0",
    "tap-difflet": "^0.7.1"
  }
}
